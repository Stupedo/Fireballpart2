package com.example.fireballnoblockdamage;

import org.bukkit.Bukkit;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.entity.EntityExplodeEvent;
import org.bukkit.plugin.java.JavaPlugin;
import org.bukkit.entity.Fireball;

public class FireballPlugin extends JavaPlugin implements Listener {

    @Override
    public void onEnable() {
        // Register the event listener
        Bukkit.getPluginManager().registerEvents(this, this);
    }

    @EventHandler
    public void onEntityExplode(EntityExplodeEvent event) {
        // Check if the entity causing the explosion is a fireball
        if (event.getEntity() instanceof Fireball) {
            // Cancel the explosion to prevent block damage
            event.setCancelled(true);
        }
    }
}
